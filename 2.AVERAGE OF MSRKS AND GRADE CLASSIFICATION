 def Average():
    # Input marks for 5 subjects
    marks = []
    for i in range(1, 6):
        mark = int(input(f"Enter the marks in subject{i}: "))
        marks.append(mark)

    # Calculate average
    total = sum(marks)
    average = total / len(marks)

    # Grade classification
    if average >= 70:
        grade = "A"
    elif average >= 60:
        grade = "B"
    elif average >= 50:
        grade = "C"
    elif average >= 40:
        grade = "D"
    else:
        grade = "F"

    print(f"\nTotal Marks: {total}")
    print(f"Average Marks: {average:.2f}")
    print(f"Grade: {grade}")

# Call the function
Average()
